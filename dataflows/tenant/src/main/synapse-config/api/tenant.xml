<?xml version="1.0" encoding="UTF-8"?>
<api context="/tenant" name="tenant" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/example">
        <inSequence>
            <dblookup>
                <connection>
                    <pool>
                        <driver>com.postgres.jdbc.Driver</driver>
                        <url>jdbc:postgresql://localhost:5432/test</url>
                        <user>postgres</user>
                        <password>12345</password>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[SELECT name, codeiso FROM tenant."language"]]></sql>
                    <result column="name" name="name"/>
                    <result column="codeiso" name="codeiso"/>
                </statement>
            </dblookup>
            <log level="custom">
                <property expression="fn:concat('Language - ',get-property('name'))" name="data"/>
            </log>
            <payloadFactory media-type="json">
                <format>{   "data":[      {&#xd;
         "name":"$1"&#xd;
      &#xd;
}&#xd;
   &#xd;
]&#xd;
}&#xd;
&#xd;
</format>
                <args>
                    <arg evaluator="json" expression="fn:concat('Language - ',get-property('name'))"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
