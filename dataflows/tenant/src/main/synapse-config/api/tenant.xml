<?xml version="1.0" encoding="UTF-8"?>
<api context="/tenant" name="tenant" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/example">
        <inSequence>
            <dblookup>
                <connection>
                    <pool>
                        <driver>org.postgresql.Driver</driver>
                        <url>jdbc:postgresql://localhost:5432/test</url>
                        <user>postgres</user>
                        <password>12345</password>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[SELECT name, codeiso FROM tenant."language"]]></sql>
                    <result column="name" name="name"/>
                    <result column="codeiso" name="codeiso"/>
                </statement>
            </dblookup>
            <log level="custom">
                <property expression="fn:concat('Language - ',get-property('name'))" name="data"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
