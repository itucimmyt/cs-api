<?xml version="1.0" encoding="UTF-8"?>
<sequence name="sqce_sg_sendmail" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom">
        <property expression="get-property('transport','To')" name="mail_list"/>
    </log>
    <send>
        <endpoint name="FileEpr1">
            <address uri="mailto:">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>1</progressionFactor>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </address>
        </endpoint>
    </send>
</sequence>
