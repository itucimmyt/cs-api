<?xml version="1.0" encoding="UTF-8"?>
<sequence name="sqce_sg_syncuser" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property description="email" expression="json-eval($.email)" name="email" scope="default" type="STRING"/>
    <log description="email value" level="custom">
        <property expression="$ctx:email" name="This is te original email"/>
    </log>
    <property description="Name before the AT" expression="fn:substring-before($ctx:email,'@')" name="name_bfore" scope="default" type="STRING" xmlns:fn="http://www.w3.org/2005/xpath-functions"/>
    <property description="uri.var.mailAccount" expression="fn:concat($ctx:name_bfore,'@cimmyt.org')" name="uri.var.mailAccount" scope="default" type="STRING"/>
    <log description="CorrectEmail" level="custom">
        <property expression="$ctx:uri.var.mailAccount" name="This is the correct email"/>
    </log>
    <log description="Body" level="custom">
        <property expression="$body" name="Body"/>
    </log>
    <payloadFactory media-type="xml">
        <format>
            <xformValues xmlns="">
                <scope>https://graph.microsoft.com/.default</scope>
                <client_secret>g-=4RAsJ6KNf5W2sEu[YTb/Za2z7i/iQ</client_secret>
                <grant_type>client_credentials</grant_type>
                <client_id>a48ad964-5c6d-4b8d-83ea-d51196038d76</client_id>
            </xformValues>
        </format>
        <args/>
    </payloadFactory>
    <property name="messageType" scope="axis2" type="STRING" value="application/x-www-form-urlencoded"/>
    <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
    <call>
        <endpoint>
            <http method="post" uri-template="https://login.microsoftonline.com/da1068b1-9955-40c3-a728-451a21599bb3/oauth2/v2.0/token">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <property description="Access Token" expression="json-eval($.access_token)" name="Token" scope="default" type="STRING"/>
    <property description="Setear Aauth" expression="fn:concat(&quot;Bearer &quot;,$ctx:Token)" name="Authorization" scope="transport" type="STRING"/>
    <log level="custom">
        <property expression="get-property('transport','Authorization')" name="Authorization"/>
    </log>
    <call>
        <endpoint>
            <http method="get" uri-template="https://graph.microsoft.com/beta/users/{uri.var.mailAccount}">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>1</progressionFactor>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <sequence key="sqce_sg_dbpersonuser"/>
</sequence>
